<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ian.ch4.mapper.BoardMapper">
    <!-- 게시글 등록 -->
    <insert id="save" parameterType="BoardDto" useGeneratedKeys="true" keyProperty="boardId" keyColumn="board_id">
        INSERT INTO board (title, content, writer)
        VALUES (#{title}, #{content}, #{writer})
    </insert>

    <!-- 단일 게시글 조회 -->
    <select id="findById" parameterType="Long" resultType="BoardDto">
        SELECT *
        FROM board
        WHERE board_id = #{boardId}
    </select>

    <!-- 전체 게시글 조회 -->
    <select id="findAll" resultType="BoardDto">
        SELECT *
        FROM board
        ORDER BY board_id DESC, created_at DESC
    </select>

    <!-- 게시글 수정 -->
    <update id="update" parameterType="BoardDto">
        UPDATE board
        SET title   = #{title},
            content = #{content},
            writer  = #{writer}
        WHERE board_id = #{boardId}
    </update>

    <!-- 단일 게시글 삭제 -->
    <delete id="delete" parameterType="BoardDto">
        DELETE
        FROM board
        WHERE board_id = #{boardId}
          and writer = #{writer}
    </delete>

    <!-- 총 게시글 수 조회 (페이징) -->
    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM board
    </select>

    <!-- 페이지 조회 (페이징) -->
    <select id="getPage" parameterType="Map" resultType="BoardDto">
        SELECT *
        FROM board
        ORDER BY board_id DESC, created_at DESC
        LIMIT #{offset}, #{pageSize}

    </select>
</mapper>
